<UserControl x:Class="Lab3_WPF.EmployeeCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" Height="250" Width="450">
    <Grid>
        <Label x:Name="EmployeeNameLabel" Content="Имя" HorizontalAlignment="Left" Margin="10,10,0,0"
               VerticalAlignment="Top" Width="220" FontSize="16" FontWeight="Bold" />
        <Image x:Name="PhotoImage" HorizontalAlignment="Left" Height="220" Margin="262,10,0,0" VerticalAlignment="Top"
               Width="170" />
        <Label x:Name="DepartmentLabel" Content="Отдел" HorizontalAlignment="Left" Margin="10,47,0,0"
               VerticalAlignment="Top" Width="220" FontSize="16" />
        <Label x:Name="PositionLabel" Content="Должность" HorizontalAlignment="Left" Margin="10,84,0,0"
               VerticalAlignment="Top" Width="220" />
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="250" VerticalAlignment="Top"
                Width="450" Margin="0,0,-0.4,-0.4" />

    </Grid>
</UserControl>